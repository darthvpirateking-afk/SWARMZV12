{
  "name": "vscode-scaffold-bot",
  "displayName": "Scaffold Bot (SWARMZ)",
  "description": "Local-first template scaffolder with placeholder substitution + audit.",
  "version": "0.1.0",
  "publisher": "swarmz",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Productivity", "Other"],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:scaffoldBot.scaffold",
    "onCommand:scaffoldBot.scaffoldHere",
    "onCommand:scaffoldBot.manageTemplates",
    "onCommand:scaffoldBot.selfCheck"
  ],
  "contributes": {
    "commands": [
      { "command": "scaffoldBot.scaffoldHere", "title": "Scaffold: New Module Here" },
      { "command": "scaffoldBot.scaffold", "title": "Scaffold: New Module (Choose Folder)" },
      { "command": "scaffoldBot.manageTemplates", "title": "Scaffold: Manage Templates" },
      { "command": "scaffoldBot.selfCheck", "title": "Scaffold: Self Check" }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "scaffoldBot.scaffoldHere",
          "when": "explorerResourceIsFolder",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Scaffold Bot",
      "properties": {
        "scaffoldBot.templatesPath": { "type": "string", "default": ".swarmz/templates" },
        "scaffoldBot.auditPath": { "type": "string", "default": ".swarmz/audit/scaffold_audit.jsonl" },
        "scaffoldBot.confirmBeforeWrite": { "type": "boolean", "default": true },
        "scaffoldBot.allowOverwrite": { "type": "boolean", "default": false },
        "scaffoldBot.preferRepoTemplates": { "type": "boolean", "default": true }
      }
    }
  },
  "scripts": { "compile": "tsc -p ." },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5"
  }
}
