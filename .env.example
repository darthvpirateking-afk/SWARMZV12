# SWARMZ Environment Configuration Template
# Copy this file to .env and configure as needed

# ==========================================
# Railway Deployment
# ==========================================
# Backend service port (set automatically by Railway)
PORT=8000
SWARMZ_MODE=production
SWARMZ_DB_URL=<railway-postgres-url>
SWARMZ_AI_ENDPOINT=<your-ai-endpoint>
SWARMZ_AI_KEY=<your-ai-key>

# Frontend service (set VITE_API_URL to your Railway backend URL)
VITE_API_URL=https://<your-backend-service>.railway.app
VITE_SWARMZ_MODE=production

# Operator Identity
SWARMZ_OPERATOR_ID=regan
SWARMZ_OPERATOR_REALM=matrix

# ==========================================
# System Configuration
# ==========================================
SWARMZ_CONFIG_PATH=config.json
SWARMZ_LOG_LEVEL=INFO

# ==========================================
# Plugin Configuration
# ==========================================
SWARMZ_PLUGIN_DIR=plugins

# ==========================================
# API Server Configuration (if using FastAPI)
# ==========================================
SWARMZ_API_HOST=127.0.0.1
SWARMZ_API_PORT=8000
SWARMZ_API_RELOAD=false
PORT=8000
DATABASE_URL=./data/nexusmon.db

# ==========================================
# Security Settings
# ==========================================
# SWARMZ_API_KEY=your-api-key-here
# SWARMZ_SECRET_KEY=your-secret-key-here

# ==========================================
# External Services (future use)
# ==========================================
# DATABASE_URL=sqlite:///swarmz.db
# REDIS_URL=redis://localhost:6379
# SMTP_SERVER=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=

# ==========================================
# Monitoring & Logging
# ==========================================
# SENTRY_DSN=
# LOG_FILE=swarmz.log

# ==========================================
# Feature Flags
# ==========================================
ENABLE_REALITY_GATE=true
ENABLE_MISSION_CONTRACT=true
ENABLE_LEAD_AUDIT=true
