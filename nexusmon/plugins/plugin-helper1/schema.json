{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Helper1Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "task": {
      "type": "string",
      "enum": [
        "generate",
        "mission",
        "schema",
        "ui",
        "patchpack"
      ]
    },
    "payload": {
      "type": "object"
    }
  },
  "required": ["task", "payload"],
  "allOf": [
    {
      "if": {
        "properties": {
          "task": {
            "const": "generate"
          }
        }
      },
      "then": {
        "properties": {
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "plugin_id": { "type": "string", "minLength": 1 },
              "name": { "type": "string" },
              "version": { "type": "string" },
              "description": { "type": "string" },
              "roles": { "type": "array", "items": { "type": "string" } },
              "tasks": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["plugin_id"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "task": {
            "const": "mission"
          }
        }
      },
      "then": {
        "properties": {
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "mission_id": { "type": "string", "minLength": 1 },
              "title": { "type": "string" },
              "summary": { "type": "string" },
              "steps": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "id": { "type": "string" },
                    "action": { "type": "string" },
                    "acceptance": { "type": "string" }
                  },
                  "required": ["id", "action"]
                }
              }
            },
            "required": ["mission_id", "steps"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "task": {
            "const": "schema"
          }
        }
      },
      "then": {
        "properties": {
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "title": { "type": "string", "minLength": 1 },
              "description": { "type": "string" },
              "properties": { "type": "object" },
              "required": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["title", "properties"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "task": {
            "const": "ui"
          }
        }
      },
      "then": {
        "properties": {
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "view_id": { "type": "string", "minLength": 1 },
              "title": { "type": "string" },
              "layout": { "type": "string", "enum": ["stack", "grid"] },
              "sections": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "id": { "type": "string" },
                    "label": { "type": "string" },
                    "type": { "type": "string", "enum": ["text", "code", "kpi", "list"] }
                  },
                  "required": ["id", "label", "type"]
                }
              }
            },
            "required": ["view_id", "sections"]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "task": {
            "const": "patchpack"
          }
        }
      },
      "then": {
        "properties": {
          "payload": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "pack_id": { "type": "string" },
              "rationale": { "type": "string" },
              "changes": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "path": { "type": "string", "minLength": 1 },
                    "action": { "type": "string", "enum": ["add", "update", "delete"] },
                    "content": { "type": "string" }
                  },
                  "required": ["path", "action"]
                }
              }
            },
            "required": ["changes"]
          }
        }
      }
    }
  ]
}
